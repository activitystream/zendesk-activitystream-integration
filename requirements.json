{
    "targets": {
        "activitystream": {
            "title": "Notify Activity Stream",
            "type": "http_target",
            "active": false,
            "created_at": "2015-06-02T12:00:54.104Z",
            "target_url": "http://collector.activitystream.com/zendesk",
            "method": "get",
            "content_type": "JSON"
        },
        "an_email_target": {
            "title": "A sample email Target",
            "type": "email_target",
            "active": true,
            "email": "petar@activitystream.com",
            "subject": "Hello, from this target!"
        }
    },
    "triggers": {
        "notify_as_on_ticket_status_changed": {
            "title": "Notify Activity Stream on ticket status Changed",
            "all": [{
                "field": "status",
                "operator": "changed"
            }],
            "actions": [{
                "field": "notification_target",
                "value": ["activitystream", "{{ticket}}"]
            }]
        },
        "email_on_ticket_solved": {
            "title": "Email on ticket solved Trigger",
            "all": [{
                "field": "status",
                "operator": "changed"
            }],
            "actions": [{
                "field": "notification_target",
                "value": ["an_email_target", "Ticket {{ticket}} has been updated."]
            }]
        }
    }
}
