    "triggers": {
        "notify_as_on_ticket_rated": {
            "title": "Notify Activity Stream on ticket satisfaction score Changed",
            "all": [
                {
                    "field": "satisfaction_score",
                    "operator": "changed"
                }
            ],
            "actions": [
                {
                    "field": "notification_target",
                    "value": [
                        "activitystream",
                        "<%= all('ticket.rated') %>"
                    ]
                }
            ]
        },
        "notify_as_on_ticket_comments_change": {
            "title": "Notify Activity Stream on ticket comments Changed",
            "all": [
                    {
                        "field": "comment_is_public",
                        "operator": "is",
                        "value": "not_relevant"
                    },
                    {
                        "field": "assignee_id",
                        "operator": "not_changed",
                        "value": null
                    },
                    {
                        "field": "requester_id",
                        "operator": "not_changed",
                        "value": null
                    }

            ],
            "actions": [
                {
                    "field": "notification_target",
                    "value": [
                        "activitystream",
                        "<%= allWithComments('comments.changed') %>"
                    ]
                }
            ]
        },
