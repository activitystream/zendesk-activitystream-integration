{
    "targets": {
        "activitystream": {
            "title": "Notify Activity Stream",
            "type": "http_target",
            "active": true,
            "created_at": "2015-06-02T12:00:54.104Z",
            "target_url": "https://inbox.activitystream.com/zendesk?apikey={{setting.token}}",
            "method": "post",
            "content_type": "application/json"
        }
